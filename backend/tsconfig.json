{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "..",
    "baseUrl": "./",
    "paths": {
      "@/shared/*": ["../shared/*"]
    }
  },
  "include": ["src/**/*", "../shared/**/*", "../shared/config.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "../frontend",
    "../test-harness",
    "../.devcontainer"
  ]
}
